-- æŒ‰é’®ç‚¹å‡»æ•ˆæœ
local function addHoverEffect(button)
    local originalColor = button.BackgroundColor3
    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = originalColor:Lerp(Color3.new(1,1,1), 0.3) -- é«˜äº®
        button:TweenSize(UDim2.new(button.Size.X.Scale, 0, button.Size.Y.Scale + 0.05, 0), "Out", "Quad", 0.1, true)
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = originalColor
        button:TweenSize(UDim2.new(button.Size.X.Scale, 0, button.Size.Y.Scale - 0.05, 0), "Out", "Quad", 0.1, true)
    end)
end

addHoverEffect(button1)
addHoverEffect(button2)
addHoverEffect(button3)

-- å…³é—­åŠŸèƒ½
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

