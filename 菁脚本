-- 科技风UI核心脚本
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "TechUI"
ScreenGui.Parent = game.Players.LocalPlayer.PlayerGui

-- 主面板
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0.8, 0, 0.7, 0)
MainFrame.Position = UDim2.new(0.1, 0, 0.15, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 15, 30)
MainFrame.BackgroundTransparency = 0.3
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true -- 可拖动
MainFrame.Parent = ScreenGui

-- 科技风边框
local Border = Instance.new("Frame")
Border.Size = UDim2.new(1, 4, 1, 4)
Border.Position = UDim2.new(-0.002, 0, -0.002, 0)
Border.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
Border.BackgroundTransparency = 0.8
Border.BorderSizePixel = 0
Border.ZIndex = -1
Border.Parent = MainFrame

-- 标题栏
local TitleBar = Instance.new("Frame")
TitleBar.Size = UDim2.new(1, 0, 0.1, 0)
TitleBar.BackgroundColor3 = Color3.fromRGB(0, 50, 80)
TitleBar.Parent = MainFrame

local TitleText = Instance.new("TextLabel")
TitleText.Text = "SYSTEM CONTROL PANEL"
TitleText.Size = UDim2.new(1, 0, 1, 0)
TitleText.Font = Enum.Font.Code
TitleText.TextColor3 = Color3.fromRGB(0, 255, 200)
TitleText.TextScaled = true
TitleText.Parent = TitleBar

-- 功能按钮区
local ButtonContainer = Instance.new("Frame")
ButtonContainer.Size = UDim2.new(1, 0, 0.8, 0)
ButtonContainer.Position = UDim2.new(0, 0, 0.1, 0)
ButtonContainer.BackgroundTransparency = 1
ButtonContainer.Parent = MainFrame

-- 科技风按钮模板
local function createTechButton(name, position, size, callback)
    local btn = Instance.new("TextButton")
    btn.Name = name
    btn.Size = size
    btn.Position = position
    btn.BackgroundColor3 = Color3.fromRGB(0, 40, 60)
    btn.BorderColor3 = Color3.fromRGB(0, 200, 255)
    btn.BorderSizePixel = 1
    btn.Font = Enum.Font.Code
    btn.Text = name:upper()
    btn.TextColor3 = Color3.fromRGB(200, 255, 255)
    btn.TextScaled = true
    
    -- 悬停效果
    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(0, 60, 90)
        btn.BorderColor3 = Color3.fromRGB(0, 255, 255)
    end)
    
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(0, 40, 60)
        btn.BorderColor3 = Color3.fromRGB(0, 200, 255)
    end)
    
    btn.MouseButton1Click:Connect(callback)
    btn.Parent = ButtonContainer
    return btn
end

-- 创建功能按钮
createTechButton("ENGINE", UDim2.new(0.05, 0, 0.1, 0), UDim2.new(0.2, 0, 0.2, 0), function()
    print("Engine activated")
end)

createTechButton("SHIELD", UDim2.new(0.35, 0, 0.1, 0), UDim2.new(0.2, 0, 0.2, 0), function()
    print("Shield engaged")
end)

createTechButton("SCAN", UDim2.new(0.65, 0, 0.1, 0), UDim2.new(0.2, 0, 0.2, 0), function()
    print("Scanning...")
end)

-- 状态显示区
local StatusPanel = Instance.new("Frame")
StatusPanel.Size = UDim2.new(1, -20, 0.3, 0)
StatusPanel.Position = UDim2.new(0, 10, 0.6, 0)
StatusPanel.BackgroundColor3 = Color3.fromRGB(0, 30, 50)
StatusPanel.BorderSizePixel = 0
StatusPanel.Parent = ButtonContainer

local StatusText = Instance.new("TextLabel")
StatusText.Text = "SYSTEM STATUS: ONLINE\nPOWER: 98%\nCONNECTION: STABLE"
StatusText.Size = UDim2.new(1, 0, 1, 0)
StatusText.Font = Enum.Font.Code
StatusText.TextColor3 = Color3.fromRGB(0, 255, 150)
StatusText.TextXAlignment = Enum.TextXAlignment.Left
StatusText.TextYAlignment = Enum.TextYAlignment.Top
StatusText.TextSize = 14
StatusText.Parent = StatusPanel

-- 关闭按钮
local CloseBtn = Instance.new("TextButton")
CloseBtn.Size = UDim2.new(0.05, 0, 0.8, 0)
CloseBtn.Position = UDim2.new(0.94, 0, 0.1, 0)
CloseBtn.Text = "X"
CloseBtn.Font = Enum.Font.Code
CloseBtn.TextColor3 = Color3.fromRGB(255, 50, 50)
CloseBtn.BackgroundColor3 = Color3.fromRGB(50, 0, 0)
CloseBtn.BackgroundTransparency = 0.5
CloseBtn.BorderSizePixel = 0
CloseBtn.Parent = TitleBar
CloseBtn.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- 动态扫描线效果
local scanLine = Instance.new("Frame")
scanLine.Size = UDim2.new(1, 0, 0.01, 0)
scanLine.BackgroundColor3 = Color3.fromRGB(0, 255, 200)
scanLine.BackgroundTransparency = 0.7
scanLine.BorderSizePixel = 0
scanLine.Parent = MainFrame

-- 扫描动画
game:GetService("RunService").RenderStepped:Connect(function()
    local pos = scanLine.Position.Y.Scale + 0.01
    if pos > 1 then pos = 0 end
    scanLine.Position = UDim2.new(0, 0, pos, 0)
end)
