-- 加载 OrionLib
local orionLibUrl = "https://raw.githubusercontent.com/HXB20111/roblox-/refs/heads/main/gui_modified_with_toggle.txt"
local loadOrionSuccess, OrionLib = pcall(function()
    return loadstring(game:HttpGet(orionLibUrl))()
end)
if not loadOrionSuccess then
    warn("加载 OrionLib 失败: " .. tostring(OrionLib))
    return
end

local Window = OrionLib:MakeWindow({
    Name = "黄脚本",
    SaveConfig = true,
    IntroText = "黄脚本 - 功能加载完成",
    Theme = "FlatBlue",
    Icon = "rbxassetid://118894209472715"
})

-- 欢迎通知
pcall(function()
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "黄脚本",
        Text = "欢迎使用，功能已就绪",
        Duration = 4,
        Icon = "rbxassetid://118894209472715"
    })
end)

-- 辅助函数：处理脚本加载（包含完整错误处理和成功提示）
local function loadRemoteScript(url, successMsg, failMsg)
    local success, httpResult = pcall(game.HttpGet, game, url)
    if not success then
        local errMsg = "网络请求失败: " .. tostring(httpResult)
        OrionLib:MakeNotification({
            Name = "加载失败",
            Content = errMsg,
            Time = 3
        })
        warn(errMsg)
        return
    end
    local loadSuccess, loadFunc = pcall(loadstring, httpResult)
    if not loadSuccess then
        local errMsg = "脚本加载失败: " .. tostring(loadFunc)
        OrionLib:MakeNotification({
            Name = "加载失败",
            Content = errMsg,
            Time = 3
        })
        warn(errMsg)
        return
    end
    if type(loadFunc) ~= "function" then
        local errMsg = "加载的内容不是有效的可执行函数，URL: " .. url
        OrionLib:MakeNotification({
            Name = "加载失败",
            Content = errMsg,
            Time = 3
        })
        warn(errMsg)
        return
    end
    local executeSuccess, executeResult = pcall(loadFunc)
    if not executeSuccess then
        local errMsg = "脚本执行失败: " .. tostring(executeResult)
        OrionLib:MakeNotification({
            Name = "加载失败",
            Content = errMsg,
            Time = 3
        })
        warn(errMsg)
        return
    end
    OrionLib:MakeNotification({
        Name = "加载成功",
        Content = successMsg,
        Time = 3
    })
end

-- 玩家功能 Tab
local Tab = Window:MakeTab({
    Name = "玩家功能",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- 基础属性设置
Tab:AddTextbox({
    Name = "跳跃高度",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        local num = tonumber(Value)
        if num then
            local localPlayer = game.Players.LocalPlayer
            local character = localPlayer.Character
            if character then
                local humanoid = character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.JumpPower = num
                else
                    warn("角色中未找到 Humanoid，无法设置跳跃高度")
                end
            else
                warn("角色尚未加载，无法设置跳跃高度")
            end
        end
    end
})

Tab:AddTextbox({
    Name = "移动速度",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        local num = tonumber(Value)
        if num then
            local localPlayer = game.Players.LocalPlayer
            local character = localPlayer.Character
            if character then
                local humanoid = character:FindFirstChildOfClass("Humanoid")
                if humanoid then
                    humanoid.WalkSpeed = num
                else
                    warn("角色中未找到 Humanoid，无法设置移动速度")
                end
            else
                warn("角色尚未加载，无法设置移动速度")
            end
        end
    end
})

