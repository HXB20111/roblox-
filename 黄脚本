-- 通用脚本加载模板
local function addScriptButton(tab, name, url, successMsg, failMsg, color)
    tab:AddButton({
        Name = name,
        Callback = function()
            loadRemoteScript(url, successMsg, failMsg)
        end,
        Color = color
    })
end

